<div class="container">
    <table>
        <tbody id="gameboard">
            @for (var i = 0; i < 9; i++)
            {
                <tr>
             @for(var j = 0; j <9; j++)
             {
                 var temp = @Model.GameBoard.GameSpaces.ElementAt((i*9) + j);
                 <td id="@temp.X@temp.Y col">
                     <input id="@temp.X@temp.Y x" type="hidden" value="@i" />
                     <input id="@temp.X@temp.Y y" type="hidden" value="@j" />
                     <input id="@temp.X@temp.Y" type="number" value ="@(i*9+j)"class="gsSubmit" />
                 </td>
             }
                </tr>
            }
